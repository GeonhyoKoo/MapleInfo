<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapleinfo.boss.mapper.BossMapper">

	<select id="selectBossBoardByBossName" resultType="com.mapleinfo.boss.domain.Boss" parameterType="String">
		SELECT
			 `id`
			 ,`bossName`
			 ,`userId`
			 ,`world`
			 ,`state`
			 ,`recommendStat`
			 ,`memberLimit`
			 ,`subject`
			 ,`content`
			 ,`createdAt`
			 ,`updatedAt`
		FROM 
			`boss`
		WHERE 
			`bossName` = #{bossName}
	</select>	


	<!-- insert -->
	<insert id="insertBossBoard" parameterType="map">
		INSERT INTO `boss`
		(
			`bossName`
			, `userId`
			, `world`
			, `state`
			, `recommendStat`
			, `presentMember`
			, `memberLimit`
			, `subject`
			, `content`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			`bossName` = #{bossName}
			, `userId` = #{userId}
			, `world` = #{world}
			, `state` = #{state}
			, `recommendStat` = #{recommendStat}
			, `presentMember` = #{presentMember}
			, `memberLimit` = #{memberLimit}
			, `subject` = #{subject}
			, `content` = #{content}
			, NOW()
			, NOW()
		)
	</insert>
	
</mapper>